{
  "name": "@jottit/jot",
  "version": "0.2.1",
  "description": "A headless ProseMirror editor that stores markdown.",
  "keywords": [
    "markdown",
    "editor",
    "prosemirror",
    "wysiwyg",
    "headless"
  ],
  "homepage": "https://github.com/Jottit/jot#readme",
  "bugs": {
    "url": "https://github.com/Jottit/jot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jottit/jot.git"
  },
  "license": "MIT",
  "author": "Simon B. Carstensen",
  "type": "module",
  "main": "dist/jot.js",
  "exports": {
    ".": "./dist/jot.js",
    "./dist/jot.css": "./dist/jot.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "esbuild src/index.js --bundle --format=esm --outfile=dist/jot.js --external:prosemirror-*",
    "build:css": "esbuild src/ui/bubble-menu.css --bundle --outfile=dist/jot.css",
    "test": "node --test"
  },
  "dependencies": {
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-markdown": "^1.13.4",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-view": "^1.41.6"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "jsdom": "^28.1.0"
  }
}
